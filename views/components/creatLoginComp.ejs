<div class="createAcount section">
  <h1>sing up</h1>
  <form action="/login/signup" class="loginForm" method="POST">
    <div class="inputFlexRow">
      <label for="userName">user Name</label>
      <input
        type="text"
        id="userName"
        name="client_fullName"
        required
        placeholder="username"
      />
      <label for="password">password</label>
      <input
        type="password"
        id="password"
        name="password"
        placeholder="password"
        required
      />
      <label for="view">view</label>
      <select name="client_view" id="">
        <option value="L">L</option>
        <option value="D">D</option>
      </select>
      <label for="email">email</label>
      <input
        type="email"
        name="client_email"
        id="email"
        placeholder="email"
        required
      />
      <label for="phon">phon</label>
      <input type="number" name="client_phon" id="phon" placeholder="phon" />
      <label for="remember">remember me</label>
      <input type="checkbox" name="remember" id="remember" />
      <br />
      <br />
      <br />
      <button>send</button>
    </div>
    <div><%=err%></div>
  </form>
</div>
